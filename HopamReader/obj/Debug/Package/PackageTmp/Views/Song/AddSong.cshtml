@model HopamReader.Models.SongViewModel
@{
    ViewBag.Title = "AddSong";
}

<style type="text/css">
    input, textarea
    {
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -moz-background-clip: padding;
        -webkit-background-clip: padding-box;
        background-clip: padding-box;
        border: 1px solid #aaaaaa;
        -webkit-box-shadow: 0 0 3px #ffffff inset, 0 1px 1px rgba(0,0,0,0.1);
        -moz-box-shadow: 0 0 3px #ffffff inset, 0 1px 1px rgba(0,0,0,0.1);
        box-shadow: 0 0 3px #ffffff inset, 0 1px 1px rgba(0,0,0,0.1);
        display: block;
        white-space: nowrap;
        position: relative;
        padding: 0 0 0 8px;
        color: #999;
        text-decoration: none;
        background: transparent;
        height:18px
    }

    select
    {
        width: 100%;
    }

    textarea
    {
        height: 120px;
        width: 100%;
        background: transparent;
        color: #999;
    }
</style>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div style="margin-left: 20px; margin-right: 20px">
            <table style="width: 100%;">
                <tr>
                    @Html.LabelFor(model => model.Title)
                </tr>
                <tr>
                    @Html.TextBoxFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </tr>
                <tr>
                    @Html.LabelFor(model => model.Writer)
                </tr>
                <tr>
                    @Html.TextBoxFor(model => model.Writer)
                    @Html.ValidationMessageFor(model => model.Writer)
                </tr>
                <tr>
                    @Html.LabelFor(model => model.Genre)
                </tr>
                <tr>
                    @Html.DropDownListFor(model => model.Genre, HopamReader.Models.GlobalData.GenreList)
                    @Html.ValidationMessageFor(model => model.Genre)
                </tr>
                <tr>
                    @Html.LabelFor(model => model.Tone)
                </tr>
                <tr>
                    @Html.DropDownListFor(model => model.Tone, HopamReader.Models.GlobalData.ToneList)
                    @Html.ValidationMessageFor(model => model.Tone)
                </tr>
                <tr>
                    @Html.LabelFor(model => model.Rhythm)
                </tr>
                <tr>
                    @Html.DropDownListFor(model => model.Rhythm, HopamReader.Models.GlobalData.RhythmList)
                    @Html.ValidationMessageFor(model => model.Rhythm)
                </tr>
                <tr>
                    @Html.LabelFor(model => model.Body)
                </tr>
                <tr>
                    @Html.TextAreaFor(model => model.Body)
                    @Html.ValidationMessageFor(model => model.Body)                    
                </tr>
            </table>
            <p style="color:#b6ff00; font-style:oblique">Hợp âm của bảng nhạc phải bỏ trong ngoặc () hoặc []. Example: Em có nghe (C) mùa thu mưa giăng lá đổ (Em) or Qua ngày [Bm] đó tôi nghe người [G] nói anh lên [A7] đường xa thật [D] rồi</p> 
            <p style="color:#f00">
                <input type="submit" value="Submit" style="width: auto; float: right; font-size: medium; border-radius: 5px; color: #ff6a00" />    
                @ViewBag.Message            
            </p>
        </div>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(function () {
            $('select').chosen();
        });

    </script>
}
